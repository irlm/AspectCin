<jboss-web>
    <!-- configure JBoss to use normal J2EE isolated class loading to avoid random conflicts 
    instead we make our best effort to support old versions of libraries -->
	<class-loading java2ClassLoadingCompliance="true">
	   <loader-repository>
	      glassbox.app:loader=glassbox.war
	      <loader-repository-config>java2ParentDelegation=true</loader-repository-config>
	   </loader-repository>
	</class-loading>
</jboss-web>
