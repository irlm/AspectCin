<?xml version="1.0"?>
<!-- Delegating build script, used by cruisecontrol to build MY_PROJECT_1.
       Note that the basedir is set to the checked out project -->
<project name="build-Glassbox" default="build" basedir=".">

    <target name="build">
	<!-- Get the latest from CVS -->
		
	    <cvs compression="true"
             compressionlevel="5"
             quiet="true"
             command="up -d -P"/>

	    <!-- Call the target that does everything -->
	    <!-- <ant dir="build" target="release"/> -->
	    <java classname="org.apache.tools.ant.launch.Launcher"
              fork="true"
              failonerror="true"
              dir="build"
              timeout="4000000">

            <classpath>
                <pathelement location="${ant.home}/lib/ant-launcher.jar"/>
            </classpath>

            <arg value="release"/>
        </java>
	    
    </target>

</project>
