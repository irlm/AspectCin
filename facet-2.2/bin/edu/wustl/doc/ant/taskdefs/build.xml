<?xml version="1.0"?>

<!-- $Id: build.xml,v 1.1 2002/09/28 19:58:28 ravip Exp $ -->

<project name="taskdefs" default="all" basedir="../../../../../..">

   <!-- Include global platform property settings. -->
   <property file="${basedir}/platform.properties"/>

   <property name="dirs.base" value="${basedir}"/>
   <property name="src" value="${dirs.base}/src"/>
   <property name="classdir" value="${dirs.base}/classes"/>

   <target name="all" depends="compile">
   </target>

   <target name="compile">
	<javac srcdir="${src}"
               destdir="${classdir}"
	       includes="edu/wustl/doc/ant/taskdefs/Batch.java"
	        />
   </target>

   <target name="clean">
	   <delete dir="${classdir}/edu/wustl/doc/ant/taskdefs"/>
   </target>
</project>
